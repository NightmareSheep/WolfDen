
<div id="ingame-options">
    <div id="ingame-options-inner">
        <h3>Options</h3>
        <button class="btn btn-secondary btn-lg" @onclick="OpenAudio">Audio</button>
    </div>
</div>

@code {
    [Parameter]
    public Overlay? Overlay { get; set; }

    private void OpenAudio()
    {
        Overlay?.Open(typeof(Audio));
    }
}
